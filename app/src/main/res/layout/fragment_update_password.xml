<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="16dp"
            android:background="@color/secondary">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/baseline_arrow_back_ios_24"
                app:tint="@color/primary"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:layout_gravity="center_vertical"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:text="Đổi mật khẩu"
                android:textColor="@color/primary"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/baseline_add_shopping_cart_24"
                app:tint="@color/primary"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_vertical"/>

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/baseline_density_small_24"
                app:tint="@color/primary"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <!-- Logo -->
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/logo"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal" />

        <!-- Current Password -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nhập mật khẩu hiện tại *"
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_edittext"
            android:paddingEnd="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="22dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:src="@drawable/ic_block" />

            <EditText
                android:id="@+id/edtCurrentPassword"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:hint="Mật khẩu hiện tại"
                android:inputType="textPassword"
                android:paddingStart="10dp"
                android:textColor="#000000"
                android:textSize="18sp"/>

            <ImageView
                android:id="@+id/ivShowCurrentPassword"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/unshow_ic"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="8dp" />
    </LinearLayout>


    <!-- New Password -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nhập mật khẩu mới *"
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_edittext"
            android:paddingEnd="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_block"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"/>


            <EditText
                android:id="@+id/edtNewPassword"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:hint="Mật khẩu mới"
                android:inputType="textPassword"
                android:paddingStart="10dp"
                android:textColor="#000000"
                android:textSize="18sp"/>

            <ImageView
                android:id="@+id/ivShowNewPassword"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/unshow_ic"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="8dp" />
        </LinearLayout>


        <!-- Confirm New Password -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nhập lại mật khẩu mới *"
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_edittext"
            android:paddingEnd="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_block"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"/>


            <EditText
                android:id="@+id/edtConfirmPassword"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:hint="Xác nhận mật khẩu mới"
                android:inputType="textPassword"
                android:paddingStart="10dp"
                android:textColor="#000000"
                android:textSize="18sp"/>

            <ImageView
                android:id="@+id/ivShowConfirmPassword"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/unshow_ic"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="8dp" />
        </LinearLayout>

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp">
            <Button
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="HỦY"
                android:textSize="18sp"
                android:textColor="@color/primary"

                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnSave"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="LƯU THAY ĐỔI"
                android:textSize="18sp"
                android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>