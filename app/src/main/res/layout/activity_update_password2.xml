<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <include android:id="@+id/headerCustom" layout="@layout/header_custom"/>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/logo_fluffy"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal" />

    <!-- New Password -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhập mật khẩu mới *"
        android:textColor="@color/primary"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bg_edittext"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_block"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"/>

        <EditText
            android:id="@+id/edtNewPassword"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:hint="Mật khẩu mới"
            android:inputType="textPassword"
            android:paddingStart="10dp"
            android:textColor="#000000"
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/ivShowNewPassword"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/unshow_ic"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp" />
    </LinearLayout>

    <!-- Confirm New Password -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhập lại mật khẩu mới *"
        android:textColor="@color/primary"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bg_edittext"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_block"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"/>

        <EditText
            android:id="@+id/edtConfirmPassword"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:hint="Xác nhận mật khẩu mới"
            android:inputType="textPassword"
            android:paddingStart="10dp"
            android:textColor="#000000"
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/ivShowConfirmPassword"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/unshow_ic"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp" />
    </LinearLayout>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp">
        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="HỦY"
            android:textSize="18sp"
            android:textColor="@color/primary"
            android:backgroundTint="@color/white"
            app:cornerRadius="16dp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/primary"
            android:textStyle="bold"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnSave"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:textSize="18sp"
            android:text="LƯU THAY ĐỔI"
            android:textColor="@color/white"
            android:backgroundTint="@color/primary"
            app:cornerRadius="16dp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/primary"
            android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>