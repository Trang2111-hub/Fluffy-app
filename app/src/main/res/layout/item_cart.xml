<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Checkbox -->
    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:buttonTint="#E74C5A"
        android:checked="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Product Image -->
    <ImageView
        android:id="@+id/productImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/sample_product"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/checkbox"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="8dp"/>

    <!-- Product Name -->
    <TextView
        android:id="@+id/productName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Capybara cùng 6 con nhỏ"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#E74C5A"
        app:layout_constraintStart_toEndOf="@id/productImage"
        app:layout_constraintTop_toTopOf="@id/productImage"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>

    <!-- Size + color -->
    <TextView
        android:id="@+id/productVariant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nâu, 40cm ▼"
        android:textSize="14sp"
        android:textColor="#E74C5A"
        android:background="@drawable/bg_cart1"
        android:padding="6dp"
        app:layout_constraintStart_toStartOf="@id/productName"
        app:layout_constraintTop_toBottomOf="@id/productName"
        android:layout_marginTop="8dp"/>

    <!-- Price -->
    <TextView
        android:id="@+id/productPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="230,000đ"
        android:textSize="16sp"
        android:textColor="#E74C5A"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/productVariant"
        app:layout_constraintTop_toBottomOf="@id/productVariant"
        android:layout_marginTop="8dp"/>

    <!-- Old Price -->
    <TextView
        android:id="@+id/productOldPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="290,000đ"
        android:textSize="14sp"
        android:textColor="#9E9E9E"
        android:paintFlags="strikeThruText"
        app:layout_constraintStart_toEndOf="@id/productPrice"
        app:layout_constraintBaseline_toBaselineOf="@id/productPrice"
        android:layout_marginStart="8dp"/>

    <!-- Quantity selector -->
    <LinearLayout
        android:id="@+id/quantityContainer"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_cart1"
        android:paddingHorizontal="12dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/productImage">

        <TextView
            android:id="@+id/btnMinus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="–"
            android:textColor="#E74C5A"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/quantityText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:layout_marginHorizontal="8dp"
            android:textColor="#E74C5A"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/btnPlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textColor="#E74C5A"
            android:textSize="20sp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
