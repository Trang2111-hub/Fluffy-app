<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@android:color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img_user_feedback"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/user2"
            android:scaleType="centerCrop"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_quantity_border"
            android:contentDescription="@null" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/user_feedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Huyền Trang"
                android:textStyle="bold"
                android:textColor="#EC4B63"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txt_date_and_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16-02-2024 | Phân loại hàng: hồng"
                android:textColor="#99000000"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_quantity_border"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:gravity="center">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_star"
                android:contentDescription="@null" />

            <TextView
                android:id="@+id/txt_rating_feedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textColor="#EC4B63"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_marginStart="4dp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/txt_content_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Chất lượng vải tốt, Gấu êm mịn"
        android:textColor="#99000000"
        android:textSize="13sp"
        android:lineSpacingExtra="2dp" />
</LinearLayout>