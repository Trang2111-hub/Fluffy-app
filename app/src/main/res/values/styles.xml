<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonPrimaryStyle">
        <item name="android:background">@drawable/button_primary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonSecondaryStyle">
        <item name="android:background">@drawable/button_secondary</item>
        <item name="android:textColor">@color/primary</item>
        <item name="strokeColor">@color/primary</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="ButtonPressStyle">
        <item name="android:background">@drawable/button_pressed</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textAllCaps">false</item>
    </style>



</resources>

